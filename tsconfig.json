{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "./dist",
    "rootDir": "./src",

    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,

    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,


  },

  "types": "./dist/index.d.ts",

  "include": ["src/**/*"],
  "exclude": ["src/test/**/*"]
}